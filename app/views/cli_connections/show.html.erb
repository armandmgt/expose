<%- title 'CLI Connection' %>
<div class="mx-auto md:w-2/3 w-full">
  <div class="w-full">
    <%= render @cli_connection %>

    <div class="mt-3 ml-2 md:ml-0">
      <%= button_to cli_connection_path(@cli_connection), method: :delete, class: "inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" do %>
        Close this connection
        <%= octicon :'x-circle', class: "-mr-1 ml-2 h-5 w-5 text-gray-500" %>
      <% end %>
    </div>
  </div>
</div>
